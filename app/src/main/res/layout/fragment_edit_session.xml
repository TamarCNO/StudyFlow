<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detailsSessionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Session Topic Label -->
    <TextView
        android:id="@+id/sessionTopicLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Session Topic"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Session Topic Value -->
    <TextView
        android:id="@+id/sessionTopicValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/sessionTopicLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Date Label -->
    <TextView
        android:id="@+id/sessionDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/sessionTopicValue"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Date Value -->
    <TextView
        android:id="@+id/sessionDateValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/sessionDateLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Time Label -->
    <TextView
        android:id="@+id/sessionTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/sessionDateValue"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Time Value -->
    <TextView
        android:id="@+id/sessionTimeValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/sessionTimeLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Materials Label -->
    <TextView
        android:id="@+id/materialsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Materials"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/sessionTimeValue"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Session Material Image -->
    <ImageView
        android:id="@+id/sessionImageView"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:contentDescription="Session material image"
        android:background="#DDDDDD"
        app:layout_constraintTop_toBottomOf="@id/materialsLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Edit Button -->
    <Button
        android:id="@+id/editSessionButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/sessionImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
